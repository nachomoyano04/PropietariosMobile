@model ContratoViewModel

@{
    ViewData["Title"] = "Detalles";
}

<div class="containerDetalle">
    <div class="columna">
        <div class="visorImagen">
            <img src="@Model.Inmueble.UrlImagen" alt="Imagen del inmueble">
        </div>
        <div class="visorDetalles">
            <h2>@Model.Inmueble.Descripcion</h2>
            <label for="">Cantidad de ambientes</label>
            <h3>@Model.Inmueble.CantidadAmbientes</h3>
            <label for="">Metros cuadrados</label>
            <h3>@Model.Inmueble.Metros2</h3>
            <label for="">Cantidad de habitaciones</label>
            <h3>@Model.Inmueble.CantidadAmbientes</h3>
            @if (Model.Inmueble.Cochera)
            {
                <h4>Cochera</h4>
            }
            @if (Model.Inmueble.Piscina)
            {
                <h4>Piscina</h4>
            }
            @if (Model.Inmueble.Mascotas)
            {
                <h4>Se aceptan mascotas</h4>
            }
        </div>
    </div>
    <div class="columna">
        <h2>Propietario: <a href="@Url.Action("filtrar","Propietario", new {id = Model.Inmueble.propietario})">@Model.Inmueble.propietario.Nombre @Model.Inmueble.propietario.Apellido</a></h2>
        @Html.Partial("PartialView/_ContratoInmueble", Model.Contrato)
    </div>
</div>
